<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/maps_light_gray"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ballon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/offset_triple_dot"
        android:src="@drawable/uni" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/offset_triple_dot"
            android:text="@string/dptype"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balloon_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/offset_triple_dot"
            android:text="@string/dpname" />
    </LinearLayout>
</LinearLayout>